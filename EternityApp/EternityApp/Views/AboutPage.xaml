<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EternityApp.Views.AboutPage"
             Title="О приложении">
    <ContentPage.Content>
        <StackLayout VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
            <Image Source="icon_cities.png" WidthRequest="300" HorizontalOptions="CenterAndExpand" />
            <Label Text="Прикасаясь к вечности" HorizontalOptions="CenterAndExpand" FontSize="Title" FontAttributes="Bold" />
            <Label x:Name="InfoLabel" FontSize="Subtitle" HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>